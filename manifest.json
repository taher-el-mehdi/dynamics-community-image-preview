{
  "manifest_version": 3,
  "name": "Dynamics Community Image Viewer",
  "version": "1.0.0",
  "description": "Preview images inline on Microsoft Dynamics Community forums without downloading",
  "author": "TAHER El Mehdi",
  "homepage_url": "https://github.com/taher-el-mehdi/dynamics-community-image-preview",
  "permissions": [
    "storage"
  ],
  
  "host_permissions": [
    "https://community.dynamics.com/*"
  ],
  
  "icons": {
    "16": "assets/icon16.png"
  },
  
  "content_scripts": [
    {
      "matches": ["https://community.dynamics.com/forums/*"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["assets/icon16.png"],
      "matches": ["https://community.dynamics.com/*"]
    }
  ],
  
  "action": {
    "default_icon": {
      "16": "assets/icon16.png"
    },
    "default_title": "Dynamics Community Image Viewer"
  }
}
